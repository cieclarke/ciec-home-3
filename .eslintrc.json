{
    "extends": "airbnb-base",
    "env": {
        "browser": false,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "arrow-body-style": ["error", "always"],
        "comma-dangle": ["error", "never"]
    }
}