<!DOCTYPE html>
<html>
    <head>
    <title><%= config.title %> <%= config.subtitle %></title>
    <%- include('html_head.ejs'); %>
    </head>
    <body id="photos">
        <% include navigation.ejs %>
        <main>
            <% if(tags !== undefined) { %>
            <div id="tags">
            <div <% if(selectedTag == 'all') { %>id="selected"<% } %>><a href="photos.htm">all</a></div>
            <% for(var i=0; i < tags.length; i++) { %>
                <div <% if(selectedTag == tags[i]) { %>id="selected"<% } %>><a href="<%= tags[i] %>.htm"><%= tags[i] %></a></div>
            <% } %>
            </div>
            <% } else { %>
            <h1>All photos from albums</h1>
            <% } %>
            <% if(images.length <= 0) { %>
            <p>No public photos made available right now</p>
            <% } else { %>
            <div id="images">
            <% for(var i=0; i < images.length; i++) { %>
                <div>
                    <h3><%= images[i].title %></h3>
                    <a href="<%= images[i].sizes['Large'].source %>">
                        <img src="<%= images[i].sizes['Medium'].source %>" />
                    </a>
                    <dl>
                        <dt>Focal Length</dt>
                        <dd><%= images[i].exif.FocalLength %></dd>
                        <dt>ISO</dt>
                        <dd><%= images[i].exif.ISO %></dd>
                        <dt>Exposure Time</dt>
                        <dd><%= images[i].exif.ExposureTime %></dd>
                        <dt>F</dt>
                        <dd><%= images[i].exif.FNumber %></dd>
                        <dt>Lens Model</dt>
                        <dd><%= images[i].exif.LensModel %></dd>
                    </dl>
                </div>
             <% } %>
             <% } %>
            </div>
        </main>
    <body>
    <% include footer.ejs %>
    <% include photos.script.js.ejs %>
<html>